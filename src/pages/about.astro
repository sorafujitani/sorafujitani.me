---
import { getEntry } from 'astro:content';
import BlogLayout from '@layouts/BlogLayout.astro';

const about = await getEntry('about', 'index');
const { Content } = await about.render();
---

<BlogLayout title="About" description="Sora Fujitaniについて">
  <div class="about-container">
    <section class="profile-section">
      <img src="/profile.png" alt="Sora Fujitani" class="profile-image" />
      <h1>Sora Fujitani</h1>
    </section>

    <section class="about-content">
      <Content />
    </section>
  </div>
</BlogLayout>

<style>
  .about-container {
    max-width: 680px;
  }

  .profile-section {
    text-align: center;
    margin-bottom: 48px;
  }

  .profile-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 24px;
  }

  .profile-section h1 {
    font-size: 36px;
    font-weight: 700;
    margin: 0;
    color: var(--color-heading);
  }

  .about-content {
    font-size: 18px;
    line-height: 1.8;
    color: var(--color-text);
  }

  .about-content :global(h2) {
    font-size: 24px;
    font-weight: 600;
    margin: 48px 0 20px 0;
    color: var(--color-heading);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 8px;
  }

  .about-content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    margin: 32px 0 16px 0;
    color: var(--color-heading);
  }

  .about-content :global(p) {
    margin: 0 0 24px 0;
  }

  .about-content :global(ul),
  .about-content :global(ol) {
    margin: 0 0 24px 0;
    padding-left: 24px;
  }

  .about-content :global(li) {
    margin: 8px 0;
  }

  .about-content :global(a) {
    color: var(--color-accent);
    text-decoration: none;
  }

  .about-content :global(a:hover) {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }
</style>
