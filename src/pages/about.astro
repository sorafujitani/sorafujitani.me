  }

  .about-list li {
    margin-bottom: 8px;
  }

  .social-links {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-block;
    padding: 8px 16px;
    background: var(--color-tag-bg);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: 6px;
    font-size: 15px;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--color-accent);
    color: var(--color-bg);
  }
</style>
