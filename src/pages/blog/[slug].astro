---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogLayout from '@layouts/BlogLayout.astro';
import TableOfContents from './_components/TableOfContents.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

const siteUrl = Astro.site || 'https://sorafujitani.me';
const postUrl = new URL(`/blog/${post.slug}`, siteUrl).toString();
const encodedUrl = encodeURIComponent(postUrl);
const encodedTitle = encodeURIComponent(post.data.title);

const formattedDate = new Intl.DateTimeFormat('ja-JP', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(post.data.pubDate);
---

<BlogLayout title={post.data.title} description={post.data.description} image={`/og/${post.slug}.png`}>
  <article class="blog-post">
    <header class="post-header">
      <a href="/blog" class="back-link">← Blog</a>
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
        <span class="separator">•</span>
        <span class="author">{post.data.author}</span>
      </div>
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="tags">
          {post.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <TableOfContents headings={headings} />
    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <div class="share-buttons">
        <span class="share-label">Share:</span>
        <a
          href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`}
          target="_blank"
          rel="noopener noreferrer"
          class="share-button share-x"
          aria-label="Share on X"
        >
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="share-button share-facebook"
          aria-label="Share on Facebook"
        >
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
        <a
          href={`https://b.hatena.ne.jp/entry/${postUrl}`}
          target="_blank"
          rel="noopener noreferrer"
          class="share-button share-hatena"
          aria-label="Share on Hatena Bookmark"
        >
          <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
            <path d="M20.47 0C22.42 0 24 1.58 24 3.53v16.94c0 1.95-1.58 3.53-3.53 3.53H3.53C1.58 24 0 22.42 0 20.47V3.53C0 1.58 1.58 0 3.53 0h16.94zM8.61 17.67c0-.67-.53-1.2-1.2-1.2-.67 0-1.2.53-1.2 1.2 0 .67.53 1.2 1.2 1.2.67 0 1.2-.53 1.2-1.2zm-.86-3.53H5.61v-8.4h2.14c1.67 0 2.4.93 2.4 2.13 0 .93-.53 1.6-1.33 1.87.93.27 1.47 1.07 1.47 2 0 1.33-.93 2.4-2.54 2.4zm7.07 0c2.27 0 3.6-1.47 3.6-3.73v-.67c0-2.27-1.33-3.73-3.6-3.73h-2.8v8.13h2.8z"/>
          </svg>
        </a>
        <button
          class="share-button share-copy"
          aria-label="Copy link"
          data-url={postUrl}
        >
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
          </svg>
        </button>
      </div>
    </footer>
  </article>
</BlogLayout>

<script>
  document.querySelectorAll('.share-copy').forEach(button => {
    button.addEventListener('click', async () => {
      const url = button.getAttribute('data-url');
      if (url) {
        await navigator.clipboard.writeText(url);
        button.classList.add('copied');
        setTimeout(() => button.classList.remove('copied'), 2000);
      }
    });
  });
</script>

<style>
  .blog-post {
    max-width: 680px;
  }

  .back-link {
    display: inline-block;
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 15px;
    margin-bottom: 24px;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .post-header {
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid var(--color-border);
  }

  h1 {
    font-size: 36px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;
    color: var(--color-heading);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
    color: var(--color-text-muted);
  }

  .separator {
    color: #6b7280;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 16px;
  }

  .tag {
    display: inline-block;
    padding: 4px 12px;
    background: var(--color-tag-bg);
    color: var(--color-text-secondary);
    font-size: 14px;
    border-radius: 16px;
  }

  .post-content {
    font-size: 18px;
    line-height: 1.8;
    color: var(--color-text);
  }

  /* Markdown content styles */
  .post-content :global(h1) {
    font-size: 32px;
    font-weight: 700;
    margin: 48px 0 24px;
    line-height: 1.2;
  }

  .post-content :global(h2) {
    font-size: 28px;
    font-weight: 700;
    margin: 40px 0 20px;
    line-height: 1.3;
  }

  .post-content :global(h3) {
    font-size: 24px;
    font-weight: 600;
    margin: 32px 0 16px;
    line-height: 1.3;
  }

  .post-content :global(p) {
    margin: 0 0 24px 0;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 0 0 24px 0;
    padding-left: 24px;
  }

  .post-content :global(li) {
    margin: 8px 0;
  }

  .post-content :global(code) {
    background: var(--color-code-bg);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    color: var(--color-code-text);
  }

  .post-content :global(pre) {
    background: var(--color-code-bg);
    color: var(--color-code-text);
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 0 0 24px 0;
    position: relative;
  }

  .post-content :global(pre[data-filename]) {
    padding-top: 40px;
  }

  .post-content :global(pre[data-filename])::before {
    content: attr(data-filename);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 8px 16px;
    background: #3d3d3d;
    color: var(--color-text-muted);
    font-size: 13px;
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, monospace;
    border-radius: 8px 8px 0 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-content :global(pre code) {
    background: transparent;
    padding: 0;
    font-size: 14px;
    line-height: 1.6;
  }

  /* Syntax Highlighting */
  .post-content :global(pre code .keyword),
  .post-content :global(pre code .import),
  .post-content :global(pre code .export),
  .post-content :global(pre code .from),
  .post-content :global(pre code .return),
  .post-content :global(pre code .if),
  .post-content :global(pre code .for),
  .post-content :global(pre code .const),
  .post-content :global(pre code .let),
  .post-content :global(pre code .var),
  .post-content :global(pre code .function),
  .post-content :global(pre code .async),
  .post-content :global(pre code .await),
  .post-content :global(pre code .try),
  .post-content :global(pre code .catch),
  .post-content :global(pre code .throw) {
    color: var(--syntax-keyword);
    font-weight: 500;
  }

  .post-content :global(pre code .function-name),
  .post-content :global(pre code .method) {
    color: var(--syntax-function);
  }

  .post-content :global(pre code .string),
  .post-content :global(pre code .template-string) {
    color: var(--syntax-string);
  }

  .post-content :global(pre code .number),
  .post-content :global(pre code .boolean) {
    color: var(--syntax-number);
  }

  .post-content :global(pre code .comment) {
    color: var(--syntax-comment);
    font-style: italic;
  }

  .post-content :global(pre code .operator),
  .post-content :global(pre code .punctuation) {
    color: var(--syntax-operator);
  }

  .post-content :global(pre code .variable),
  .post-content :global(pre code .parameter) {
    color: var(--syntax-variable);
  }

  .post-content :global(pre code .constant),
  .post-content :global(pre code .class-name) {
    color: var(--syntax-constant);
  }

  .post-content :global(a) {
    color: var(--color-accent);
    text-decoration: none;
  }

  .post-content :global(a:hover) {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-border);
    padding-left: 20px;
    margin: 24px 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 24px 0;
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 48px 0;
  }

  .post-footer {
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid var(--color-border);
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .share-label {
    font-size: 14px;
    color: var(--color-text-muted);
  }

  .share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: var(--color-tag-bg);
    color: var(--color-text-secondary);
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .share-button:hover {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  .share-copy.copied {
    background: #22c55e;
    color: white;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 28px;
    }

    .post-content {
      font-size: 16px;
    }

    .post-content :global(h1) {
      font-size: 26px;
    }

    .post-content :global(h2) {
      font-size: 22px;
    }

    .post-content :global(h3) {
      font-size: 20px;
    }
  }
</style>
