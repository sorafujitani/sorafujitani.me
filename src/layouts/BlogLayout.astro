---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image = '/profile.png' } = Astro.props;
const siteUrl = Astro.site || 'https://sorafujitani.me';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const ogImage = new URL(image, siteUrl);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Sora Fujitani</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Sora Fujitani`} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Sora Fujitani`} />
    {description && <meta property="twitter:description" content={description} />}
    <meta property="twitter:image" content={ogImage} />
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="site-title">Sora Fujitani</a>
        <nav>
          <a href="/blog">Blog</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>&copy; 2025 Sora Fujitani</p>
      </footer>
    </div>
  </body>
</html>

<style>
  :global(:root) {
    /* Color Palette */
    --color-bg: #1a1a1a;
    --color-text: #e8e6e3;
    --color-text-muted: #9ca3af;
    --color-text-secondary: #d1d5db;
    --color-heading: #ffffff;
    --color-border: #333;
    --color-accent: #22d3ee;
    --color-accent-hover: #67e8f9;

    /* Component Colors */
    --color-tag-bg: #2a2a2a;
    --color-code-bg: #1f2937;
    --color-code-text: #f9fafb;

    /* Syntax Highlighting Colors */
    --syntax-keyword: #22d3ee;
    --syntax-function: #60a5fa;
    --syntax-string: #34d399;
    --syntax-number: #fb923c;
    --syntax-comment: #6b7280;
    --syntax-operator: #e8e6e3;
    --syntax-variable: #a78bfa;
    --syntax-constant: #fbbf24;
  }

  :global(body) {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    color: var(--color-text);
    background: var(--color-bg);
    line-height: 1.6;
  }

  .container {
    max-width: 680px;
    margin: 0 auto;
    padding: 0 24px;
  }

  header {
    padding: 48px 0 32px;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
  }

  nav a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 16px;
  }

  nav a:hover {
    color: var(--color-accent);
  }

  main {
    padding: 48px 0;
    min-height: 60vh;
  }

  footer {
    padding: 32px 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  footer p {
    margin: 0;
    color: var(--color-text-muted);
    font-size: 14px;
  }

  /* Footnotes */
  :global(.footnotes) {
    margin-top: 48px;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
    font-size: 14px;
    color: var(--color-text-muted);
  }

  :global(.footnotes h2) {
    display: none;
  }

  :global(.footnotes ol) {
    padding-left: 20px;
    margin: 0;
  }

  :global(.footnotes li) {
    margin-bottom: 8px;
  }

  :global(.footnotes li p) {
    margin: 0;
    display: inline;
  }

  :global(.footnotes a) {
    color: var(--color-accent);
    text-decoration: none;
  }

  :global(.footnotes a:hover) {
    color: var(--color-accent-hover);
  }

  :global(.data-footnote-backref) {
    margin-left: 4px;
    text-decoration: none;
  }

  :global(sup a[data-footnote-ref]) {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 12px;
    font-weight: 600;
    padding: 0 2px;
  }

  :global(sup a[data-footnote-ref]:hover) {
    color: var(--color-accent-hover);
  }
</style>
