---
import { getPublishedPosts } from '@lib/posts';

const posts = await getPublishedPosts();
const searchData = posts.map(post => ({
    title: post.data.title,
    description: post.data.description,
    slug: post.slug,
    tags: post.data.tags || [],
    externalUrl: post.data.externalUrl || null,
  }));
---

<div class="search-container">
  <button class="search-trigger" aria-label="Search">
    <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    <span>Search</span>
    <kbd>‚åòK</kbd>
  </button>
</div>

<dialog class="search-modal">
  <div class="search-modal-content">
    <div class="search-input-wrapper">
      <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input type="text" class="search-input" placeholder="Search posts..." autofocus />
      <button class="search-close" aria-label="Close">
        <kbd>Esc</kbd>
      </button>
    </div>
    <div class="search-results"></div>
  </div>
</dialog>

<script define:vars={{ searchData }}>
  const modal = document.querySelector('.search-modal');
  const trigger = document.querySelector('.search-trigger');
  const input = document.querySelector('.search-input');
  const results = document.querySelector('.search-results');

  function openSearch() {
    modal.showModal();
    input.focus();
    input.value = '';
    results.innerHTML = '';
  }

  function closeSearch() {
    modal.close();
  }

  function search(query) {
    if (!query.trim()) {
      results.innerHTML = '';
      return;
    }

    const q = query.toLowerCase();
    const matches = searchData.filter(post =>
      post.title.toLowerCase().includes(q) ||
      post.description.toLowerCase().includes(q) ||
      post.tags.some(tag => tag.toLowerCase().includes(q))
    );

    if (matches.length === 0) {
      results.innerHTML = `
        <div class="no-results">
          <div class="no-results-icon">üîç</div>
          <div class="no-results-text">No results found</div>
          <div class="no-results-hint">Try different keywords</div>
        </div>
      `;
      return;
    }

    results.innerHTML = matches.map(post => {
      const href = post.externalUrl || `/blog/${post.slug}/`;
      const targetAttr = post.externalUrl ? ' target="_blank" rel="noopener noreferrer"' : '';
      const externalIcon = post.externalUrl ? ' <span style="font-size:11px;opacity:0.6">‚Üó</span>' : '';
      return `
        <a href="${href}" class="search-result"${targetAttr}>
          <span class="result-title">${post.title}${externalIcon}</span>
          <span class="result-description">${post.description}</span>
        </a>
      `;
    }).join('');
  }

  trigger.addEventListener('click', openSearch);

  document.querySelector('.search-close').addEventListener('click', closeSearch);

  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeSearch();
  });

  input.addEventListener('input', (e) => search(e.target.value));

  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      openSearch();
    }
    if (e.key === 'Escape' && modal.open) {
      closeSearch();
    }
  });
</script>

<style>
  .search-container {
    display: flex;
    align-items: center;
  }

  .search-trigger {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    background: var(--color-tag-bg);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text-muted);
    cursor: pointer;
    font-size: 14px;
    transition: all 0.2s ease;
  }

  .search-trigger:hover {
    border-color: var(--color-accent);
    color: var(--color-text);
  }

  .search-trigger kbd {
    font-size: 11px;
    padding: 2px 5px;
    background: var(--color-bg);
    border-radius: 4px;
    border: 1px solid var(--color-border);
  }

  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    border: none;
    padding: 0;
    max-width: 100%;
    max-height: 100%;
  }

  .search-modal::backdrop {
    background: rgba(0, 0, 0, 0.7);
  }

  .search-modal-content {
    position: fixed;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    max-width: 560px;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
  }

  .search-input-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    border-bottom: 1px solid var(--color-border);
  }

  .search-input-wrapper svg {
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    background: none;
    border: none;
    color: var(--color-text);
    font-size: 16px;
    outline: none;
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .search-close kbd {
    font-size: 11px;
    padding: 3px 6px;
    background: var(--color-tag-bg);
    border-radius: 4px;
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
  }

  .search-results {
    max-height: 500px;
    overflow-y: auto;
    padding: 8px;
  }

  .search-result {
    display: block;
    padding: 16px;
    text-decoration: none;
    border-radius: 8px;
    margin-bottom: 4px;
    transition: background 0.2s ease;
  }

  .search-result:last-child {
    margin-bottom: 0;
  }

  .search-result:hover {
    background: var(--color-tag-bg);
  }

  .result-title {
    display: block;
    color: #00d8ff !important;
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 8px;
    line-height: 1.4;
  }

  .search-result:visited .result-title {
    color: #00d8ff !important;
  }

  .search-result:hover .result-title {
    color: #5ce6ff !important;
  }

  .result-description {
    display: block;
    color: var(--color-text-secondary);
    font-size: 14px;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .no-results {
    padding: 48px 24px;
    text-align: center;
    margin: 0;
  }

  .no-results-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .no-results-text {
    color: #ffffff;
    font-size: 16px;
    font-weight: 500;
  }

  .no-results-hint {
    color: #ffffff;
    font-size: 14px;
    margin-top: 8px;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .search-trigger span,
    .search-trigger kbd {
      display: none;
    }

    .search-trigger {
      padding: 8px;
    }
  }
</style>
